doctype html
head
style
    include ../public/stylesheets/css/reset1.css
    include ../public/stylesheets/css/admin.css
title bella-amazon
header
  .amazon-logo
nav
  ul
    li
      a(href='/admin') ITEM
    li
      a(href='/admin/user') USERS
section
  p  SHIP 
  .category.ship-div
section
  p  STREAM 
  .category.stream-div
section
  p  SHOP 
  .category.shop-div
section
  p  READ 
  .category.read-div
section
  p  MORE 
  .category.more-div
.item-insert-div
  h2 ITEM &#xCD94;&#xAC00;
  form.item-insert-form(action='/admin/addItem' method='POST' enctype='multipart/form-data')
    label(for='jb-input-text') keyword
    textarea(type='text' name='keyword')
    label(for='jb-input-text') title
    textarea(type='text' name='title')
    label(for='jb-input-text') description
    textarea(type='text' name='description')
    label(for='jb-input-text') tail
    textarea(type='text' name='tail')
    label(for='jb-input-text') link
    textarea(type='text' name='link')
    label(for='jb-input-text') category
    select(name='category')
      option(value='ship') ship
      option(value='stream') stream
      option(value='shop') shop
      option(value='read') read
      option(value='more') more
    label(for='jb-input-text') image
    input(type='file' name='image')
    input(type='submit')
script(type='module' src='/src/components/adminItem.js')